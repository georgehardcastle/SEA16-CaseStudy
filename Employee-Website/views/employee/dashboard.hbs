    <div class="dash-info-container">
      <div id="customer-details"></div>
    </div>
  </div>
</div>

<div class="custom-col-d-6 dash-tile">
  <div class="box-shadow">
    <div id="customer-order" class="dash-info-container-no-search">
      <h2 class="dash-tile-no-content">No Orders</h2>
    </div>
  </div>
</div>

<div class="custom-col-d-6 dash-tile">
  <div class="g-search-box-container">
      <input id="catalog-search-input" class="g-search-box-input" name="search" type="text" placeholder="Search Catalog"><button id="catalog-search-submit" type="submit" class="sky-blue-bg g-search-box-submit"><i class="fa fa-search fa-lg" aria-hidden="true"></i></button>
  </div>
  <div class="box-shadow">
    <div class="dash-info-container">
      <div id="catalog-details"></div>
    </div>
  </div>
</div>
