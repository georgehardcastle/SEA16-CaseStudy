{{> header}}

<div class="spacer-100"></div>
<div class="radial-bg fixed-bg"></div>
<div class="custom-col-d-6 dash-tile">
  <div class="g-search-box-container">
      <input id="customer-search-input" class="g-search-box-input" name="search" type="text" placeholder="Search Customers"><button id="customer-search-submit" type="submit" class="sky-blue-bg g-search-box-submit"><i class="fa fa-search fa-lg" aria-hidden="true"></i></button>
  </div>
  <div class="box-shadow">
    <div class="dash-info-container">
      <div id="customer-details"></div>
    </div>
  </div>
</div>

<div class="custom-col-d-6 dash-tile">
  <div class="box-shadow">
    <div id="customer-order" class="dash-info-container-no-search">
      <h2 class="dash-tile-no-content">No Orders</h2>
    </div>
  </div>
</div>

<div class="custom-col-d-6 dash-tile">
  <div class="g-search-box-container">
      <input id="catalog-search-input" class="g-search-box-input" name="search" type="text" placeholder="Search Catalog"><button id="catalog-search-submit" type="submit" class="sky-blue-bg g-search-box-submit"><i class="fa fa-search fa-lg" aria-hidden="true"></i></button>
  </div>
  <div class="box-shadow">
    <div class="dash-info-container">
      <div id="catalog-details"></div>
    </div>
  </div>
</div>

<div id="update" class="custom-col-d-6 dash-tile">
  <div class="box-shadow">
    <div class="dash-info-container-no-search">
      <input type="text" id="firstname-update" name="firstname-update" class="form-in" placeholder="First Name" value={{this.firstname}}>
      <input type="text" id="lastname-update" name="lastname-update" class="form-in" placeholder="Last Name"  value={{this.lastname }}>
      <input type="text" id="firstlineofaddress-update" name="firstlineofaddress-update" class="form-in" placeholder="Address"  value={{this.firstlineofaddress}}>
      <input type="text" id="town-update" name="town-update" class="form-in" placeholder="Town" value={{this.town}}>
      <input type="text" id="postcode-update" name="postcode-update" class="form-in" placeholder="Postcode"  value={{this.postcode}}>
      <input type="text" id="contactnumber-update" name="contactnumber-update" class="form-in" placeholder="Contact Number"  value={{this.contactnumber}}>
      <input type="hidden" id="email-update" name="email-update" class="form-in" placeholder="E-Mail"  value={{this.email}}>
      <input type="hidden" name="_csrf" value="{{ csrfToken }}">
      <button class="update-details-btn sky-blue-bg submit-btn" type="submit">Update Details</button>
    </div>
  </div>
</div>


<div class="custom-col-d-12 dash-tile">
  <div class="box-shadow">
    <div id="customer-order-details" class="dash-info-container-no-search">
      <div id="customer-order-customer-details" style="width:50%; border: 1px solid red"></div>
      <div id="customer-order-product-details" style="width:50%; border: 1px solid blue"></div>
      <div id="customer-order-checkout-details" style="width:50%; border: 1px solid green">
        <h4 id="customer-order-cart-total"> Total: Â£0 </h4>
      </div>
      <button id="place-order-btn" class="sky-blue-bg submit-btn" type="submit">Place Order</button>
    </div>
  </div>
</div>
