<div class="customer-forms-container">
    <div class="box-shadow">
    <form action= "/user/edit" method="post" class="customer-forms">
      <legend>Edit Profile</legend>
      <label for="firstname">First Name</label>
      <input type="text" id="firstname" name="firstname" class="form-in" value={{user.firstname}}>
      <label for="lastname">Surname</label>
      <input type="text" id="lastname" name="lastname" class="form-in"  value={{user.lastname }}>
      <label for="firstlineofaddress">First line of address</label>
      <input type="text" id="firstlineofaddress" name="firstlineofaddress" class="form-in"  value={{user.firstlineofaddress}}>
      <label for="town">Town</label>
      <input type="text" id="town" name="town" class="form-in" value={{user.town}}>
      <label for="postcode">Postcode</label>
      <input type="text" id="postcode" name="postcode" class="form-in"  value={{user.postcode}}>
      <label for="contactnumber">Contact number</label>
      <input type="text" id="contactnumber" name="contactnumber" class="form-in"  value={{user.contactnumber}}>
      <label for="email">E-mail</label>
      <input type="text" id="email" name="email" class="form-in"  value={{user.email}} disabled>
      <input type="hidden" name="_csrf" value="{{ csrfToken }}">
      <button type="submit" class="sky-blue-bg submit-btn">Edit Details</button>
    </form>
  </div>
</div>
